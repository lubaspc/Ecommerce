                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <form method="post" asp-controller="Categorias" asp-action="GetPost">
                <div class="modal-body">
                    <div class="form-horizontal">
                        <div class="form-group">
                            <label class="col-md-2">Nombre</label>
                            <div class="col-md-10">
