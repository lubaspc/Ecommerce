@using Microsoft.AspNet.Identity
@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
    {
    @Html.AntiForgeryToken()

    <ul class="nav navbar-nav navbar-right">
        <li>
            @Html.ActionLink("Hello " + User.Identity.GetUserName() + "!", "Index", "Manage", routeValues: null, htmlAttributes: new { title = "Manage" })
        </li>
        <li><a href="javascript:document.getElementById('logoutForm').submit()">Log off</a></li>

        <li>
            <a class="nav-link" href="@Url.Action("Index", "Carrito")">
                <i class="fas fa-shopping-cart fa-2x"></i></a>
        </li>
    </ul>
    }
}
else
{

<ul class="nav navbar-nav navbar-right mr-auto">
    <li>
        @Html.ActionLink("Registrarse", "Register", "Account",
        routeValues: null,
        htmlAttributes: new { id = "registerLink", @class = "nav-link" })
    </li>
    <li>
        @Html.ActionLink("Iniciar sesion", "Login", "Account", routeValues: null,
        htmlAttributes: new { id = "loginLink", @class = "nav-link" })
    </li>
    <li>
        <a class="nav-link" href="@Url.Action("Index", "Carrito")">
            <i class="fas fa-shopping-cart fa-2x"></i></a>
    </li>
</ul>

    
}
