@model Ecommerce.Models.IndexViewModel
@using Ecommerce.Models

@{
    ViewBag.Title = "Manage";
    var cliente = ViewBag.cliente;
}



<div class="container" style="margin-top:93px;">
    <div class="row">
        <div class="col-md-4"></div>
        <div class="col-md-4"></div>
        <div class="col-md-4">
            <a href="/Manage/Edit" class="btn btn-success btn-lg btn-block"><i class="fas fa-edit"></i>  Modificar información</a>
        </div>
    </div>
    <div class="row" style="margin-top:20px;">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                    <h5>Datos Personales</h5>
                </div>
                <div class="card-body">
                    <p><b>Nombre: </b>@cliente.Nombre</p>
                    <p><b>Correo: </b></p>
                    <p><b>Sexo: </b>@cliente.Sexo</p>
                    <p><b>Fecha de Nacimiento: </b>@cliente.Fecha_Nacimeinto</p>
                    <p><b>Contraseña: </b>**********</p>

                </div>
            </div>
        </div>

        <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                    <h5>Datos de envío</h5>
                </div>
                <div class="card-body">
                    <p><b>Estado: </b>Estado de México</p>
                    <p><b>Municipio: </b>Metepec</p>
                    <p><b>Código Postal: </b>52140</p>
                    <p><b>Colonia: </b>Centro</p>
                    <p><b>Calle: </b>Av. Estado de México</p>
                </div>
            </div>
        </div>
    </div>
    
</div>




