@model Ecommerce.Models.RegisterViewModel
@{
    ViewBag.Title = "Registrate";
}

    <div class="pt-5 vh-100 bg-pan2">
        <div class="text-center">
            <h2 class="text-white">@ViewBag.Title.</h2>
        </div>

        <div class="row justify-content-center align-content-center">
            <div class="col-md-6 shadow bg-semitanparente">
                <div class="row justify-content-center align-content-center text-center">
                    @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                    {
                        @Html.AntiForgeryToken()
                        <h4 class="text-white">Crear cuenta</h4>
                        <hr />
                        @Html.ValidationSummary("", new { @class = "text-danger" })
                        <div class="form-group">
                            @Html.LabelFor(m => m.Email, new { @class = "control-label" })

                            @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })

                        </div>
                        <div class="form-group">
                            @Html.LabelFor(m => m.Password, new { @class = " control-label" })

                            @Html.PasswordFor(m => m.Password, new { @class = "form-control" })

                        </div>
                        <div class="form-group">
                            @Html.LabelFor(m => m.ConfirmPassword, new { @class = " control-label" })

                            @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })

                        </div>
                        <div class="form-group">
                            <input type="submit" class="btn btn-primary form-control" value="Registrar" />
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
            @section Scripts {
                @Scripts.Render("~/bundles/jqueryval")
            }
