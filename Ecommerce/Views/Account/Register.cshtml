@model Ecommerce.Models.RegisterViewModel
@{
    ViewBag.Title = "Registrate";
}

<div class="pt-5 vh-100 bg-pan2">
    

    <div class="row justify-content-center">
        <div class="col-md-6 shadow bg-semitanparente">
            <div class="row text-left p-4">
                @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                {
                    @Html.AntiForgeryToken()

                    @Html.ValidationSummary("", new { @class = "text-danger" })

                <div class="container">
                    <div class="row text-center justify-content-center">
                        <div class="col-12">
                            <h4 class="text-white">Registrarse</h4>
                        </div>

                        <hr />
                    </div>


                        <div class="form-group">
                            @Html.LabelFor(m => m.Email, new { @class = "control-label" })

                            @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })

                        </div>
                    

                    <div class="form-group">
                        @Html.LabelFor(m => m.UserName, new { @class = "col-md-2 control-label" })
                        <div class="col-md-10">
                            @Html.TextBoxFor(m => m.UserName, new { @class = "form-control" })
                        </div>
                    </div>

                  

                        
                            <div class="form-group">
                                @Html.LabelFor(m => m.Password, new { @class = " control-label" })

                                @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                            </div>
                        
                        
                            <div class="form-group">
                                @Html.LabelFor(m => m.ConfirmPassword, new { @class = " control-label" })

                                @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })

                            </div>
                        
                    


                    
                            <div class="form-group mt-5">
                                <input type="submit" class="btn btn-primary form-control text-center" value="Registrar" />
                            </div>
                    
                </div>

                    
                }
            </div>
        </div>
    </div>
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
